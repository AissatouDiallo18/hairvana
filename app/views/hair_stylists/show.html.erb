<div class="row">
  <div style= "text-align: left" id="show-headline">
    <h1><%= @hairstylist.business_name %></h1>
  </div>

  <div class="col-8 col-lg-8">
    <img class="show-detail-image" src="<%= @hairstylist.image_url %>" alt="Hairstylist_image">
  </div> 

  <div class="col-4 col-lg-4">
    <div class="contact-box-show">
      <h4>Contact information</h4>
      <p>Location: <%= @hairstylist.address %></p>
      <p>Phone number: <%= @hairstylist.phone_number %></p>
    </div>
  

    <div class="timeslots-box-show">
        <h4>My available Timeslots:</h4>
        <%#inserting timeslots%>
        <%#inserting Booking button%>
    </div>

    <div>
      <button class="button-appointment" type="button">Book Appointment!</button>
    </div>
  </div>

  

  <div class="reviews-box-show">
    <h4> Reviews: *****</h4>
  </div>



 <div>
  <h4>My available Timeslots:</h4>
  <%#inserting timeslots%>
  <%#inserting Booking button%>
  </div>
   <%= link_to "Book Appointment!", new_booking_path(hairstylist: @hairstylist.id), class: "btn btn-neutral button-appointment" %>
 </div>

</div>

