<div id="big-box">
  <div id="hairstylists-list">
    <% @hair_stylists.each do |hair_stylist| %>
      <a href="<%= hair_stylist_path(hair_stylist) %>">
        <div class='index_card'>
          <img class="index_card_img" src="<%=hair_stylist.image_url%>" alt="hair image">
          <div class="index_card_title">
            <p><%= hair_stylist.business_name %></p>
          </div>
          <div class="index_card_subtitle">
            <p><%= hair_stylist.address %></p>
          </div>
        </div>
      </a>
    <% end %>
  </div>

  <div class="map"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
